@using Devgram.Data.Interfaces
@using Microsoft.AspNetCore.Mvc.TagHelpers
@inject IAspnetUser _aspnetUser;

<header class="header header-border" id="header">
        @* <figure> *@
        @*     <a href="/"> *@
        @*         <img class="img-logo" src="/images/logo.png" alt="Logo devgram"/> *@
        @*     </a> *@
        @* </figure> *@
        <div class="title text-center cursor-pointer">
            <a asp-controller="Home" asp-action="Index">
                <span>Devgram</span>
            </a>
        </div>

        <nav class="nav">
            <ul class="links">
                <li class="d-flex gap-44">
