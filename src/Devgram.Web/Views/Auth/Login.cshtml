@using Microsoft.AspNetCore.Mvc.TagHelpers

@section Head {
    <link rel="stylesheet" href="~/css/pages/login.css" asp-append-version="true"/>
    <title>Devgram â€¢ Login</title>
}

@model Devgram.Data.ViewModels.LoginViewModel 

<div class="login-container">
    <div class="login-card">
        <div class="login-title text-center">
            <span>Devgram</span>
        </div>
        <div class="login-subtitle text-center mb-3">
            <span>Login</span>
        </div>
        <form asp-action="Login" method="post">
            <div class="form-group mb-1">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-1">
                <label asp-for="Senha"></label>
                <input asp-for="Senha" type="password" class="form-control"/>
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>

            <div asp-validation-summary="All" class="text-danger mt-8 mb-2"></div>
            
            <div class="d-flex justify-content-between">
                <a asp-action="NovaConta" class="btn-outline-purple">Registrar-se</a>
                <button type="submit" class="btn-outline-orange">Login</button>
            </div>
        </form>
    </div>
</div>

