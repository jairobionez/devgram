@section Head {
    <link rel="stylesheet" href="~/css/pages/login.css" asp-append-version="true"/>
    <title>Devgram â€¢ Nova conta</title>
}

@model Devgram.Data.ViewModels.NovaContaViewModel


<div class="login-container">
    <div class="login-card">
        <div class="login-title text-center">
            <span>Devgram</span>
        </div>
        <div class="login-subtitle text-center mb-3">
            <span>Nova conta</span>
        </div>
        <form asp-action="NovaConta" method="post">
            <div class="form-group mb-1">
                <label asp-for="Nome"></label>
                <input asp-for="Nome" class="form-control"/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group mb-1">
                <label asp-for="Sobrenome"></label>
                <input asp-for="Sobrenome" class="form-control"/>
                <span asp-validation-for="Sobrenome" class="text-danger"></span>
            </div>
            <div class="form-group mb-1">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-1">
                <label asp-for="Senha"></label>
                <input asp-for="Senha" type="password" class="form-control"/>
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>

            <div class="form-group mb-1">
                <label asp-for="ConfirmarSenha">Confirmar Senha</label>
                <input asp-for="ConfirmarSenha" type="password" class="form-control"/>
                <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
            </div>

            @* <div asp-validation-summary="ConfirmarSenha" class="text-danger mt-8 mb-2"></div> *@

            <div class="d-flex justify-content-between">
                <a asp-action="Login" class="btn-outline-purple">Voltar</a>
                <button type="submit" class="btn-outline-orange">Registrar-se</button>
            </div>
        </form>
    </div>
</div>
 